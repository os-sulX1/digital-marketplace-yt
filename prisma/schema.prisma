
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}


model User {
  id String @id @unique
  email String
  firstName String
  lastName String
  profileImage String
  Product Product[]
}

model Product  {
  id String @id @default(uuid())
  name String 
  price Int
  smallDescription String
  description String
  image String[]
  productFile String
  category  Categortypes
  User User? @relation(fields: [userId] ,references: [id])
  userId String?
  createdAt DateTime @default(now())

}


enum Categortypes {
template
uikit
icon
}